<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wkrj.scjdaqsc.scjdaqsc.activity.ExposureActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:background="#408ff4">
        <LinearLayout
            android:id="@+id/ll_exp_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/back"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="返回"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="曝光台"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="首页"
            android:textColor="#00ffffff"
            android:textSize="16sp" />
    </LinearLayout>
    <RadioGroup
        android:id="@+id/mRadioGroup1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_bgt_geb"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="光荣榜"
            android:textSize="14dp"
            android:gravity="center"
            android:textColor="@drawable/exp_color_selector"
            android:checked="true"
            android:paddingBottom="5dp"
            android:paddingTop="8dp"
            android:button="@null"
            android:layout_height="match_parent" />
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="1dp"
            android:layout_marginBottom="5dp"
            android:layout_height="match_parent"
            android:background="#666666"/>
        <RadioButton
            android:id="@+id/rb_bgt_tb"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="通报"
            android:textSize="14dp"
            android:textColor="@drawable/exp_color_selector"
            android:gravity="center"
            android:paddingTop="8dp"
            android:button="@null"
            android:paddingBottom="5dp"
            android:layout_height="match_parent" />
    </RadioGroup>
    <LinearLayout
        android:layout_marginBottom="3dp"
        android:layout_width="match_parent"
        android:layout_height="1dp">
        <TextView
            android:id="@+id/tv_exp_1"
            android:background="#408ff4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp" />
        <TextView
            android:id="@+id/tv_exp_2"
            android:background="#408ff4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp" />
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/mViewpage1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>

</LinearLayout>
